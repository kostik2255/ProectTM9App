<Page x:Class="ProectTM9App.Pages.FeedbackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProectTM9App.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FeedbackPage">

    <Grid Background="Green">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="3">
            <TextBlock Text="ОТЗЫВЫ" HorizontalAlignment="Center" FontSize="23" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Прочитайте, что говорят наши заказчики о нас." HorizontalAlignment="Center" FontSize="18" Foreground="White"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3" Margin="10">
            <StackPanel x:Name="ReviewsStackPanel">
                <Button x:Name="LoadReviewsBtn" Content="ЗАГРУЗИТЬ ОТЗЫВЫ" Click="LoadReviewsBtn_Click" Background="#FF6A92FA" Padding="20" Foreground="Black" FontSize="20" FontWeight="Bold" Width="300" Margin="0,100,0,0" Height="70"/>
                <!-- Отзывы будут добавляться сюда -->
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.ColumnSpan="3" Grid.Row="2">
            <Button x:Name="LeaveReviewBtn" Content="ОСТАВИТЬ ОТЗЫВ" Background="#FFFA663D" Margin="10" Foreground="White" Click="LeaveReviewBtn_Click" HorizontalAlignment="Center" Width="200" Height="40" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>
